/* Confirm Dialog */

@import "~/.config/rofi/colorized/colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	"Iosevka Nerd Font 12";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					1px;
    border-radius:          0px;
    border-color:           @bg;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:			@fg;
}
