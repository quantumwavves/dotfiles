configuration {
  modi: "drun,window,windowcd,keys,filebrowser,run,combi";

  font: "Iosevka Nerd Font 14";
  drun-display-format: " {name} ";
  sidebar-mode: true;
  matching: "fuzzy";
  scroll-method: 0;
  disable-history: false;
  show-icons:  true;
  icon-theme: "Papirus";

  display-drun: "  Menu";
  display-run: "  Run";
  display-window: "   Window";
  display-windowcd: "   Window+";
  display-keys: "   Keys";
  display-filebrowser: "  Browse";
  display-combi: "   Binds";

  window-thumbnail: true;
  sort: true;
  sorting-method: "normal";

  timeout {
    action: "kb-cancel";
    delay: 30;
  }

  filebrowser {
    directories-first: true;
    sorting-method: "name";
  }
}

@import "~/.config/rofi/colorized/colors.rasi"

